<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.TransparentStatusBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="FullscreenTheme" parent="AppTheme.TransparentStatusBar">
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <item name="android:windowBackground">@drawable/bg_scrim_black_transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="RegisterTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/textPrimary</item>
        <item name="android:background">@drawable/bg_semi_round_gray_top</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="RegisterEditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColorHint">@color/textPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginStart">-4dp</item>
        <item name="android:layout_marginEnd">-4dp</item>
        <item name="backgroundTint">@color/greyDark</item>
    </style>

    <style name="RegisterNextBtnStyle">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/bg_semi_round_blue</item>
        <item name="android:paddingStart">@dimen/dimens_22</item>
        <item name="android:paddingEnd">@dimen/dimens_22</item>
        <item name="android:paddingTop">@dimen/dimens_8</item>
        <item name="android:paddingBottom">@dimen/dimens_8</item>
        <item name="android:text">@string/next</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OtpEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/text_otp_hint</item>
        <item name="android:textColorHint">@color/greyTranslucent</item>
        <item name="android:background">@drawable/ic_otp_input_background_selector</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:paddingTop">@dimen/dimens_5</item>
        <item name="android:paddingBottom">@dimen/dimens_5</item>
        <item name="android:paddingStart">@dimen/dimens_10</item>
        <item name="android:paddingEnd">@dimen/dimens_10</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_marginTop">@dimen/components_vertical_margin</item>
    </style>

    <style name="CameraRetakeButtonStyle">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/bg_semi_round_color_accent</item>
        <item name="android:paddingStart">@dimen/dimens_40</item>
        <item name="android:paddingEnd">@dimen/dimens_40</item>
        <item name="android:paddingTop">@dimen/dimens_10</item>
        <item name="android:paddingBottom">@dimen/dimens_10</item>
        <item name="android:text">@string/next</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
