<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout/activity_registration_step1_0">

    <TextView
        android:id="@+id/tv_reistration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/registration_views_vertical_margin"
        android:textAllCaps="true"
        android:text="@string/text_registration_step"
        android:textSize="@dimen/textSizeNormal"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        android:layout_alignStart="@+id/pb_registration"/>

    <TextView
        android:id="@+id/tv_current_registration_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_current_registration_step"
        android:textSize="@dimen/textSizeNormal"
        android:layout_marginStart="@dimen/dimens_4"
        android:layout_toEndOf="@+id/tv_reistration_text"
        android:layout_marginTop="@dimen/registration_views_vertical_margin" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_max_registration_step"
        android:textSize="@dimen/textSizeNormal"
        android:layout_marginStart="@dimen/dimens_4"
        android:layout_toEndOf="@+id/tv_current_registration_step"
        android:layout_marginTop="@dimen/registration_views_vertical_margin" />
    
    <ProgressBar
        android:id="@+id/pb_registration"
        android:layout_width="650dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@+id/tv_reistration_text"
        android:layout_marginTop="@dimen/dimens_8"
        android:progress="25"
        android:progressTint="@color/colorPrimary"
        android:progressBackgroundTint="@color/greyDark" />


    <TextView
        android:id="@+id/tv_registration_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_registration"
        android:text="@string/text_registration_instruction"
        android:textSize="@dimen/textSizeMedium"
        android:textColor="@color/textNormal"
        android:layout_marginTop="@dimen/registration_views_vertical_margin"
        android:layout_alignStart="@+id/pb_registration" />

    <com.certis_base_app.cusom.ClearableEditText
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        style="@style/EditTextStyle"
        android:hint="@string/hint_staff_id"
        android:layout_below="@+id/tv_registration_instruction_text"
        android:layout_marginTop="@dimen/dimens_16"
        android:background="@drawable/bg_semi_gray_top"
        android:layout_alignStart="@+id/pb_registration"
        android:layout_alignEnd="@+id/pb_registration"/>

</RelativeLayout>



